@model Parnian.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "تغییر رمز";
    ViewBag.Sidebar_Location = "settings";
}

@section tools {
    <p class="alert alert-warning">
        رمز انتخابی باید حداقل ۶ حرفی باشد و در آن از حروف بزرگ
        (مانند A)،
        حروف کوچک
        (مانند a)،
        اعداد
        (مانند 1)
        و کاراکتری غیر از عدد و حرف
        (مانند ?)
        استفاده شده باشد.
    </p>
}

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">تغییر رمز</h3>
            </div>
            <div class="panel-body">
                <div class="container-fluid">
                    <div class="row">
                        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.OldPassword, new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-4">
                                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", dir = "ltr" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.NewPassword, new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-4">
                                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", dir = "ltr" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-4">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", dir = "ltr" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-4">
                                    <input type="submit" value="تغییر رمز" class="btn btn-primary" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <a href="@Url.Action("Settings")"><span class="glyphicon glyphicon-arrow-right"></span>&nbsp;بازگشت به تنطیمات</a>
    </div>
</div>