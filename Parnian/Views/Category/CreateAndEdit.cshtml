@model Parnian.Models.Category
@{
    Layout = "~/Views/Shared/_ModelCreateAndEditLayout.cshtml";
    ViewBag.Object_Name = "دسته";
    ViewBag.Object_Plural_Name = "دسته‌ها";
    ViewBag.Root_Directory = "/App_Files/Categories/";
    ViewBag.Sidebar_Location = "categories";
    ViewBag.hasImage = true;
    ViewBag.imageWarning = "عکس باید ۲۸۰ در ۱۰۳ پیکسل باشد.";
}

@section pretitle{
    @Html.LabelFor(model => model.isMenuItem, htmlAttributes: new { @class = "control-label col-sm-3" })
    <div class="col-sm-1">
        <div class="checkbox">
            @Html.EditorFor(model => model.isMenuItem)
        </div>
    </div>

    @Html.LabelFor(model => model.isIndexTile, htmlAttributes: new { @class = "control-label col-sm-3" })
    <div class="col-sm-1">
        <div class="checkbox">
            @Html.EditorFor(model => model.isIndexTile)
        </div>
    </div>
}

<div class="form-group">
    @Html.LabelFor(model => model.type, htmlAttributes: new { @class = "control-label col-sm-2" })
    <div class="col-sm-10">
        @Html.EnumDropDownListFor(model => model.type, new { @class = "form-control" })
    </div>
</div>